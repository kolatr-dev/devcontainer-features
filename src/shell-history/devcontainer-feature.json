{
    "name": "Kolatr: Shell History",
    "id": "shell-history",
    "version": "1.0.1",
    "description": "Persists shell histories in bash and zsh.",
    "mounts": [
        {
            "source": "bashhistory-${devcontainerId}",
            "target": "/commandhistory",
            "type": "volume"
        }
    ],
    "postCreateCommand": "/usr/local/share/kolatr-shell-history-post-create.sh"
}
