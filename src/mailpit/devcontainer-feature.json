{
    "name": "mailpit",
    "id": "mailpit",
    "version": "1.0.2",
    "description": "Installs and runs Mailpit. https://github.com/axllent/mailpit",
    "dependsOn": {
        "ghcr.io/devcontainers/features/common-utils": {
            "installZsh": false,
            "installOhMyZsh": false,
            "installOhMyZshConfig": false,
            "upgradePackages": false
        }
    },
    "options": {
        "autoStart": {
            "type": "boolean",
            "description": "Run Mailpit on start",
            "default": true
        }
    },
    "entrypoint": "/usr/local/bin/mailpit-entrypoint"
}